<?xml version="1.0" encoding="UTF-8"?>
<faces-config xmlns="http://java.sun.com/xml/ns/javaee" 
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
              xsi:schemaLocation="http://java.sun.com/xml/ns/javaee /WEB-INF/schema/web-facesconfig_2_0.xsd" 
              version="2.0" metadata-complete="false">
    <!-- This file must be present with our jar, even if it is empty.  Otherwise, our Java annotations won't get scanned! -->
<managed-bean>
	<managed-bean-name>maths</managed-bean-name>
    <managed-bean-class>com.java.calculators.Mathematics</managed-bean-class>
    <managed-bean-scope>request</managed-bean-scope>
  </managed-bean>    
<managed-bean>
	<managed-bean-name>age</managed-bean-name>
    <managed-bean-class>com.java.calculators.AgeCalculator</managed-bean-class>
    <managed-bean-scope>request</managed-bean-scope>
  </managed-bean>    
<managed-bean>
	<managed-bean-name>impl</managed-bean-name>
    <managed-bean-class>com.java.calculators.DaoImpl</managed-bean-class>
    <managed-bean-scope>request</managed-bean-scope>
  </managed-bean>    

</faces-config>
